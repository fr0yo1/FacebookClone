@model FacebookClone.Models.Comment
@{
    ViewBag.Title = "CommentPartialView";
}
<br />
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<div class="container">
        <div class="col-sm-1">
            <div class="thumbnail">
                <img class="img-responsive user-photo" src="@Html.Action("getProfilePictureFor", "NewsFeed", new {user = Model.AspNetUser})">
            </div>
        </div>
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>@Model.AspNetUser.Profile.firstname @Model.AspNetUser.Profile.lastname</strong> <span class="text-muted">commented @Model.date</span>
                </div>
                <div class="panel-body">
                    @Model.content
                </div>
            </div>
        </div>
</div>