@model FacebookClone.Models.AlbumViewModel
@{
    ViewBag.Title = "Album";
}



    <div><h3 style="text-align:center;">@Model.albumName</h3> <br/><br /></div>
<div class="gallery">
    @foreach (var post in Model.posts)
    {
        using (Html.BeginForm("ShowPostFromAlbum", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="image" src=@Url.Content(post.postPictureRelativePath) style="width:170px;height:200px;">
            <div hidden="hidden">
                @Html.EditorFor(model => model.albumID)
                @Html.EditorFor(model => model.albumName)
                @Html.EditorFor(model => model.appLocation)
            </div>
            <div class="desc">@post.content</div>
        }
    }
</div>

<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: 150px;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>

