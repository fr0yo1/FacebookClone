@model FacebookClone.Models.GenericItemViewModel
@{
    ViewBag.Title = "ItemPartialView";
}

<ul class="list-group">
    <li class="list-group-item">
        <a href="~/@Model.myController/@Model.clickOption/@Model.id">
            <div style="display: inline-block; width:50px ; height:50px; overflow:hidden">
                <img src=@Model.imagePath style="height: 50px; width: auto;" />
            </div>
            <div style="display: inline-block; width:auto ; height:50px; overflow:hidden;text-align:center; vertical-align:middle;">
                <p>@Model.content</p>
            </div>
        </a>

    </li>
</ul>
