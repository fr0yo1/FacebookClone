@model FacebookClone.Models.PostViewModel
@{
    ViewBag.Title = "PostPartialView";
}
@using (Html.BeginForm("ShowPostFromAlbum", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input id="img" type="image" src=@Url.Content(@Model.postPictureRelativePath) style="width:170px;height:200px;">
    <div hidden="hidden">
        @Html.EditorFor(m => m.post_id)
        @Html.EditorFor(m => m.userID)
        @*@Html.EditorFor(m => m.appLocation)*@
    </div>
    <div class="desc">@Model.content</div>
}
<style>
    input.img {
        width: 100%;
        height: 150px;
    }

    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>
